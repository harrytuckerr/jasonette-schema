{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title" : "$jason",
  "properties" : {
    "head": {
      "type": "object",
      "description": "The head contains a set of metadata that doesn't get displayed directly",
      "properties" : {
        "title" : {
          "type" : "string"
        },
        "description" : {
          "type" : "string"
        },
        "icon" : {
          "type" : "string",
          "format" : "url",
          "links": [
            {
              "href": "{{self}}",
              "mediaType": "image/png"
            }
          ]
        },
        "offline" : {
          "type" : "boolean"
        },
        "styles" : {
          "type" : "object",
          "additionalProperties" : {
            "$ref" : "#/definitions/style"
          }
        },
        "actions" : {
          "type" : "object",
          "additionalProperties" : {
            "$ref" : "#/definitions/action"
          }
        },
        "templates" : {

        },
        "data" : {

        }
      }
    },
    "body": {
      "type": "object",
      "description": "Body contains everything that gets displayed on the screen.",
      "properties" : {
        "header" : {
          "description": "Header describes the top header bar and its components.",
          "properties" : {
            "title" : {
              "anyOf": [
                { "type": "string" },
                { "$ref": "#/definitions/advancedTitle" }
              ]
            }
          }
        }
      }
    }
  },
  "definitions" : {
    "style" : {
      "type" : "object",
      "properties" : {
        "font" : {
          "type" : "string"
        },
        "size" : {
          "type" : "integer"
        },
        "padding" : {
          "type" : "integer"
        },
        "color" : {
          "type" : "string",
          "format" : "color"
        }
      }
    },
    "action" : {
      "type" : "object",
      "properties" : {
        "type" : {
          "type" : "string"
        },
        "options" : {
          "type" : "object"
        },
        "success" : {
          "properties" : {
            "type" : {
              "type" : "string"
            },
            "options" : {
              "type" : "object"
            }
          }
        },
        "error" : {
          "properties" : {
            "type" : {
              "type" : "string"
            },
            "options" : {
              "type" : "object"
            }
          }
        }
      }
    },
    "template" : {

    },
    "data" : {
      "type" : "object"
    },
    "advancedTitle" : {
      "title" : "Advanced Title",
      "type" : "object",
      "additionalProperties": false,
      "oneOf" : [ {
          "title" : "Title with Image",
          "properties" : {
            "type" : {
              "type" : "string",
              "enum" : ["image"]
            },
            "url" : {
              "type" : "string",
              "links": [
                {
                  "href": "{{self}}",
                  "mediaType": "image/png"
                }
              ]
            },
            "style" : {
              "type" : "object",
              "properties" : {
                "width" : {
                  "type" : "integer"
                },
                "height" : {
                  "type" : "integer"
                }
              },
              "required" : ["width, height"]
            }
          },
          "required" : ["type", "url"]
        },
        {
          "title" : "Title with Label",
          "properties" : {
            "type" : {
              "type" : "string",
              "enum" : ["label"]
            },
            "text" : {
              "type" : "string",
              "format" : "text"
            }
          },
          "required" : ["type", "text"]
        }
      ]
    }
  }
}
