{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title" : "$jason",
  "properties" : {
    "head": {
      "type": "object",
      "description": "The head contains a set of metadata that doesn't get displayed directly",
      "properties" : {
        "title" : {
          "type" : "string"
        },
        "description" : {
          "type" : "string"
        },
        "icon" : {
          "type" : "string",
          "format" : "url",
          "links": [
            {
              "href": "{{self}}",
              "mediaType": "image/png"
            }
          ]
        },
        "offline" : {
          "type" : "boolean"
        },
        "styles" : {
          "type" : "object",
          "additionalProperties" : {
            "$ref" : "#/definitions/style"
          }
        },
        "actions" : {
          "type" : "object",
          "additionalProperties" : {
            "$ref" : "#/definitions/action"
          }
        },
        "templates" : {

        },
        "data" : {

        }
      }
    },
    "body": {
      "type": "object",
      "description": "Body contains everything that gets displayed on the screen."
    }
  },
  "definitions" : {
    "style" : {
      "type" : "object",
      "properties" : {
        "font" : {
          "type" : "string"
        },
        "size" : {
          "type" : "integer"
        },
        "padding" : {
          "type" : "integer"
        },
        "color" : {
          "type" : "string",
          "format" : "color"
        }
      }
    },
    "action" : {
      "type" : "object",
      "properties" : {
        "type" : {
          "type" : "string"
        },
        "options" : {
          "type" : "object"
        },
        "success" : {
          "$ref" : "#/definitions/action"
        },
        "error" : {
          "$ref" : "#/definitions/action"
        }
      }
    },
    "template" : {

    },
    "data" : {
      "type" : "object"
    }
  }
}
